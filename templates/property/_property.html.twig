<div class="card mb-4">
    {% if property.filename %}
        <img class="card-img-top" src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}"
             alt="image {{ property.title }}"
             style="width:100%; height: auto">
    {% else %}
        <img class="card-img-top" src="{{ '/images/properties/empty.png' | imagine_filter('thumb') }}"
             alt="image {{ property.title }}"
             style="width:100%; height: auto">
    {% endif %}
    <div class="card-body">

        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id }) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {{ property.formatedPrice }} €

        </div>
    </div>
</div>




